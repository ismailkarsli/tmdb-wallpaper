{
	"build": {
		"beforeDevCommand": "pnpm run ui-dev",
		"beforeBuildCommand": "pnpm run ui-build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "WallpaperFlix",
		"version": "0.0.1"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"fs": {
				"createDir": true,
				"readDir": true,
				"readFile": true,
				"writeFile": true
			}
		},
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true,
			"menuOnLeftClick": true
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.ico"],
			"identifier": "net.karsli.wp",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 700,
				"resizable": true,
				"title": "WallpaperFlix",
				"width": 500,
				"visible": false
			}
		]
	}
}
